{% extends "base.jinja" %}
{% block header %}
  <link href="{{ static('css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
  <div id="login">
      <h1 id="title">dunamis</h1>
      {% if form.errors %}
        <p>Your username and/or password didn't match.</p>
      {% endif %}

      {% if user is defined %}
        {% if user.is_authenticated %}
          Current User: {{ user.username }}
        {% endif %}
      {% endif %}

      <form class="form-horizontal" method="post" action="{{ url('login') }}">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3 form-item">
          <input class="form-control" id="id_username" name="username" type="text" maxlength="254" placeholder="Username">
        </div>
        <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3 form-item">
          <input class="form-control" id="id_password" name="password" type="password" placeholder="Password">
        </div>
        <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3 form-item">
          <input class="btn btn-primary btn-block" id="login_button" type="submit" value="login" />
        </div>
        <input type="hidden" name="next" value="{{ next }}" />
      </form>
  </div>
{% endblock %}